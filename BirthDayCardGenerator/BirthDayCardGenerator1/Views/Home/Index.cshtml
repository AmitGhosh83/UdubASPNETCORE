@model BirthDayCardGenerator1.Models.ResponseForm
@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.scss" />
    <title>Birthday Card Generator</title>
</head>
<body>
    <h4>Birthday Card Generator</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h4>Send a  Birthday Card</h4>
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Sender" class="control-label">From:</label>
                    <input asp-for="Sender" class="form-control" />
                    <span asp-validation-for="Sender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Recipient" class="control-label">To:</label>
                    <input asp-for="Recipient" class="form-control" />
                    <span asp-validation-for="Recipient" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label">Message:</label>
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="SendCard" class="btn btn-success" />
                </div>
            </form>

        </div>
    </div>
</body>
</html>
